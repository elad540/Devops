      pollSCM '''TZ=Israel
    H(0-59)/10 * * * *'''
   }
    tools {
      terraform 'Terraform'
    }

    stages {
        stage ('terraform init') {
              steps {
                dir('terraform-EC2') {
                    sh ('terraform init')
                }
            }
        }
